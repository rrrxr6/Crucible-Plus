{
	"manifest_version": 2,
	"name": "Crucible +",
	"version": "1.0",

	"description": "Integrate Crucible with Jenkins. Automatically insert boilerplate comments into reviews.",
	"icons": {"48" : "images/pageAction.png", "128" : "images/pageAction.png"},

	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},

	"page_action": {
		"default_icon" : {"38" : "images/pageAction.png"},
		"default_title" : "Crucible+",
		"default_popup" : "pageAction.html"
	},
	
	"permissions" : [
		"tabs",
		"<all_urls>",
		"declarativeContent",
		"storage"
	],
	
	"content_scripts": [
		{
			"matches": ["http://*/viewer/cru*"],
			"js": ["js/jquery.js", "js/jenkinsIcon.js"]
		}
	]
}